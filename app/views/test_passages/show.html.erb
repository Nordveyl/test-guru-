<h4>Passing the <%= @test_passage.test.title %> Test</h4> 

<h1><%= @test_passage.current_question.name %></h1>
<b> 
  <%= @test_passage.number_of_current_question %> of 
  <%= @test_passage.count_of_questions %> 
</b>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %> 
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :name, include_hidden: false do |b| %> 
    <p> 
      <%= b.check_box id: "answer_ids_#{b.object.id}" %> 
      <%= b.label %> 
    </p> 
  <% end %>    

  <p><%= form.submit 'Next' %></p>   
<% end %> 
