<%= form_with model: [ @question, @answer], local: true do |form| %>
  <%= render 'shared/errors', resource: @answer %>

  <p> 
    <%= form.label :name %><br> 
    <%= form.text_area :name, id: :answer_name, rows: 7, cols: 60 %> 
  </p> 

  <p> 
    <%= form.label :correct %> 
    <%= form.chack_box :name, id: :answer_correct %> 
  </p> 

  <p><%= form.submit %></p>
<% end %>
